{
  "compilerOptions": {
    "composite": true, // Often needed with project references - add if missing, might solve some module resolution implicitly
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    // "resolveJsonModule": true, // Add if you import JSON files directly
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true, // You had this, keeping it

    /* Vite client types (Important) */
    "types": ["vite/client"] // Add this if it's missing
  },
  // --- UPDATED INCLUDE SECTION ---
  "include": ["src", "src/**/*.d.ts", "*.d.ts"]
}
